@import "soon.styl"

.canvas
	height 30px
	overflow hidden	
	position relative
	
	&-menu
		color white
		background black
		width 200px
		position absolute
		left -200px
		top 0
		text-align left
		-webkit-transition 1s
		&.is-active
			left 0
		

	&-sidebar
		color white
		background black
		position absolute
		width 200px
		right -200px
		text-align right
		-webkit-transition 1s
		&.is-active
			right 0
		
